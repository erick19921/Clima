<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <Button
        android:id="@+id/btnTempUserSensor"
        android:layout_width="347dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Temperaturas registradas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegNewD" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnombreinicio"
        app:srcCompat="@mipmap/nuve" />

    <TextView
        android:id="@+id/txtnombreinicio"
        android:layout_width="380dp"
        android:layout_height="22dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalirInicio" />

    <Button
        android:id="@+id/btnMostrarInicio"
        android:layout_width="127dp"
        android:layout_height="39dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:text="Usuarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSalirInicio"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:text="SALIR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toEndOf="@+id/btnMostrarInicio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegNewD"
        android:layout_width="347dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="Igresar nuevos datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnTempMediaSector"
        android:layout_width="343dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="TEMPERATURA MEDIA DE UN SECTOR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTempUserSensor" />

    <Button
        android:id="@+id/btnTempUsSecSensor"
        android:layout_width="341dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:text="CANTIDAD DE TEMPERATURAS (U,S)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTempMediaSector" />

    <Button
        android:id="@+id/btnTempInterHorasSec"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="CANTIDAD TEMPERATURAS (H, S)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTempUsSecSensor" />
</androidx.constraintlayout.widget.ConstraintLayout>